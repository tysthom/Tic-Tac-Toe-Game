<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="420dp"
        android:layout_height="100dp"
        android:id="@+id/Boarder"
        android:text="Tic Tac Toe"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:background="#FF150e8f"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:id="@+id/Grid"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingTop="150dp"
        app:layout_constraintBottom_toTopOf="@id/CurrentTurn"

        >

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/TopLeft"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:textSize="60sp"
            app:backgroundTint="#FFa6a6a6"
            app:cornerRadius="0dp"
            android:onClick="assignSign"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/TopMiddle"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:textSize="60sp"
            app:backgroundTint="#FFa6a6a6"
            app:cornerRadius="0dp"
            android:onClick="assignSign"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/TopRight"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:textSize="60sp"
            app:backgroundTint="#FFa6a6a6"
            app:cornerRadius="0dp"
            android:onClick="assignSign"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/MiddleLeft"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:textSize="60sp"
            app:backgroundTint="#FFa6a6a6"
            app:cornerRadius="0dp"
            android:onClick="assignSign"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/MiddleMiddle"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:textSize="60sp"
            app:backgroundTint="#FFa6a6a6"
            app:cornerRadius="0dp"
            android:onClick="assignSign"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/MiddleRight"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:textSize="60sp"
            app:backgroundTint="#FFa6a6a6"
            app:cornerRadius="0dp"
            android:onClick="assignSign"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/BottomLeft"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:textSize="60sp"
            app:backgroundTint="#FFa6a6a6"
            app:cornerRadius="0dp"
            android:onClick="assignSign"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/BottomMiddle"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:textSize="60sp"
            app:backgroundTint="#FFa6a6a6"
            app:cornerRadius="0dp"
            android:onClick="assignSign"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/BottomRight"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:textSize="60sp"
            app:backgroundTint="#FFa6a6a6"
            app:cornerRadius="0dp"
            android:onClick="assignSign"/>
    </GridLayout>

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/CurrentTurn"
        android:text="Current Turn: "
        android:textSize="40sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/Grid"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/Winner"
        android:text="Winner: Draw"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@id/CurrentTurn"
        app:layout_constraintRight_toLeftOf="@id/Reset"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:id="@+id/Reset"
        android:text="Reset"
        android:textSize="30dp"
        app:backgroundTint="#FFa6a6a6"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@id/CurrentTurn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/Winner"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="resetGame"
        />

</androidx.constraintlayout.widget.ConstraintLayout>